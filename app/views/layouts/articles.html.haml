- content_for :navbar do
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %ul#custom-nav
          - if current_user
            %li
              %a.btn.btn-inverse{href: '/#/index'} Home
            %li
              %a.btn.btn-inverse{href: '/#/new'} Add new
            %li
              %a.btn.btn-inverse{href: logout_path, rel: 'nofollow'} Logout
          - else
            %li
              %a.btn.btn-inverse{href: '#'} Home
            %li
              %a.btn.btn-inverse{href: login_path} Login

= render template: 'layouts/application'